{% extends 'parts/base.twig' %}

{% block body %}
    <h1>Signup page</h1>

    {% if message is not null %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endif %}
    <form method="post" action="/signup-post">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" class="form-control" id="username" value="{{ form ? form.username }}" />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" id="password"/>
        </div>
        <div class="form-group">
            <label for="con-password">Confirm Password</label>
            <input type="password" name="con-password" class="form-control" id="con-password"/>
        </div>
        <button type="submit" class="btn btn-primary">Signup</button>
    </form>
{% endblock %}